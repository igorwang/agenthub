{
  "extends": ["next/core-web-vitals", "prettier", "plugin:prettier/recommended"],
  "plugins": ["graphql"],
  "rules": {
    "graphql/template-strings": [
      "error",
      {
        "env": "apollo",
        "tagName": "gql",
        "schemaJsonFilepath": "./graphql/generated/schema.json"
      }
    ]
  }
}
